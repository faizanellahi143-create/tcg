{
  "name": "tcg-bot-simulator",
  "version": "1.0.0",
  "description": "Full-stack TCG Bot Simulator with React frontend and Node.js backend",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "build": "npm run build --workspaces",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "start": "npm run start --workspace=backend",
    "start:frontend": "npm run preview --workspace=frontend",
    "start:backend": "npm run start --workspace=backend",
    "install:all": "npm install && npm install --workspace=frontend && npm install --workspace=backend",
    "lint": "npm run lint --workspaces",
    "lint:frontend": "npm run lint --workspace=frontend",
    "lint:backend": "npm run lint --workspace=backend",
    "test": "npm run test --workspaces",
    "test:frontend": "npm run test --workspace=frontend",
    "test:backend": "npm run test --workspace=backend",
    "clean": "npm run clean --workspaces",
    "clean:frontend": "rm -rf frontend/dist frontend/node_modules",
    "clean:backend": "rm -rf backend/dist backend/node_modules",
    "clean:all": "rm -rf node_modules frontend/node_modules backend/node_modules frontend/dist backend/dist"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "tcg",
    "bot",
    "simulator",
    "fullstack",
    "react",
    "nodejs",
    "mongodb",
    "express"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/tcg-bot-simulator.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/tcg-bot-simulator/issues"
  },
  "homepage": "https://github.com/yourusername/tcg-bot-simulator#readme"
}
