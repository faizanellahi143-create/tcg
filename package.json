{
  "name": "tcg-bot-simulator",
  "version": "1.0.0",
  "description": "Full-stack TCG Bot Simulator with React frontend and Node.js backend",
  "private": true,
  "workspaces": ["frontend", "backend"],
  "scripts": {
    "dev": "concurrently \"yarn workspace tcg-bot-simulator-backend dev\" \"yarn workspace tcg-bot-simulator-frontend dev\"",
    "build": "yarn workspaces run build",
    "build:frontend": "yarn workspace tcg-bot-simulator-frontend build",
    "build:backend": "yarn workspace tcg-bot-simulator-backend build",
    "start": "yarn workspace tcg-bot-simulator-backend start",
    "start:frontend": "yarn workspace tcg-bot-simulator-frontend preview",
    "start:backend": "yarn workspace tcg-bot-simulator-backend start",
    "install:all": "yarn install",
    "lint": "yarn workspaces run lint",
    "lint:frontend": "yarn workspace tcg-bot-simulator-frontend lint",
    "lint:backend": "yarn workspace tcg-bot-simulator-backend lint",
    "test": "yarn workspaces run test",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules frontend/dist backend/dist"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": { "node": ">=18.0.0" }
}
